<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                     http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                     http://www.springframework.org/schema/aop
                     http://www.springframework.org/schema/aop/spring-aop-3.1.xsd">
    <bean id="testPlateauBean" class="org.damo.Plateau">
        <constructor-arg index="0" value="Arcadia Planitia"></constructor-arg>
        <constructor-arg index="1" value="3"></constructor-arg>
        <constructor-arg index="2" value="5"></constructor-arg>

    </bean>

    <bean id="testPositionBean" class="java.awt.Point">
        <constructor-arg name="x" value="2"></constructor-arg>
        <constructor-arg name="y" value="1"></constructor-arg>
    </bean>

    <bean id="InjectwithConstructor" class="org.damo.MarsRover">
        <constructor-arg name="plateau" ref="testPlateauBean"></constructor-arg>
        <constructor-arg name="initialHeading" type="org.damo.Heading" value="EAST"></constructor-arg>
        <constructor-arg name="initialPosition" type="java.awt.Point"  ref="testPositionBean"></constructor-arg>
    </bean>
</beans>